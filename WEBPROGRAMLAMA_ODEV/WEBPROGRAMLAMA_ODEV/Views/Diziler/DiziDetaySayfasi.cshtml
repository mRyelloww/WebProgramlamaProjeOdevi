                        <!-- DİZİ AÇIKLAMASI BİTTİ -->

                        <div class="anime__details__widget">
                            <div class="row">
                                <div class="col-lg-6 col-md-6">
                                    <ul>
                                        <li><span>Stüdyo:</span> @Html.ViewData.Model.DiziStudyo </li>
                                        <li><span>Yayın Tarihi:</span> @Html.ViewData.Model.DiziTarih </li>
                                        <li><span>Tür:</span> Action, Komedi</li>
                                    </ul>
                                </div>
                                <div class="col-lg-6 col-md-6">
                                    <ul>
                                        <li><span>Beğeni Sayısı:</span> @Html.ViewData.Model.DiziBegeni </li>
                                        <li><span>Sezon Sayısı:</span> @Html.ViewData.Model.DiziSezonSayi</li>
                                        <li><span>IMDb Puanı:</span> @Html.ViewData.Model.DiziIMDB</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <!-- BUTTON KISIMLARI-->
                        <div class="anime__details__btn">

                            <a asp-area="" asp-controller="Diziler" asp-action="BegeniArtti" asp-route-id="@Html.ViewData.Model.DiziID" class="follow-btn"> <i class="fa fa-thumbs-up"></i> BEĞEN </a>

                            <a href="@Html.ViewData.Model.DiziLink" class="watch-btn">  <span>ŞİMDİ İZLE</span> <i class="fa fa-angle-right"></i> </a>

                        </div>
                        <!-- BUTTON KISIMLARI BİTTİ-->

                    </div>
                </div>
            </div>
        </div>
