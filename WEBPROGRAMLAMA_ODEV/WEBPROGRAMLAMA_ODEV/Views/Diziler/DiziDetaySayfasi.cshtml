<!-- BREADCRUMB -->
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a asp-area="" asp-controller="Home" asp-action="Index"> <i class="fa fa-home">  </i> AnaSayfa </a>
                    <a asp-area="" asp-controller="Diziler" asp-action="DizilerSayfasi"> <i class="fa fa-home">  </i> Diziler </a>
                    <span style="color:crimson"> @Html.ViewData.Model.DiziAd </span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- BREADCRUMB BİTTİ -->


<section class="anime-details spad">
    <div class="container">
        <!-- DİZİ DETAY KISMI -->
        <div class="anime__details__content">
            <div class="row">

                <div class="col-lg-3">
                    <div class="anime__details__pic set-bg" data-setbg="/img/DiziPosterleri/@Html.ViewData.Model.DiziDosyaAdi">
                        <div class="comment"><i class="fa fa-thumbs-up"></i> @Html.ViewData.Model.DiziBegeni </div>
                    </div>
                </div>

                <div class="col-lg-9">
                    <div class="anime__details__text">
                        <div class="anime__details__title">
                            <h3>@Html.ViewData.Model.DiziAd</h3>
                        </div>
