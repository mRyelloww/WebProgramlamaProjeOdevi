@using WEBPROGRAMLAMA_ODEV.Models
@model List<WEBPROGRAMLAMA_ODEV.Models.Diziler>

<br />
<table class="table table-bordered">
    <tr>
        <th style="color:crimson">ID</th>
        <th style="color:crimson">Ad</th>
        <th style="color:crimson">Tür</th>
        <th style="color:crimson">Stüdyo</th>
        <th style="color:crimson">Sezon Sayısı</th>
        <th style="color:crimson">IMDB</th>
        <th style="color:crimson">Bilgi</th>
        <th style="color:crimson">Sil</th>
        <td style="color:crimson">Güncelle</td>
    </tr>   
    @foreach (var x in Model)
    {
        <tr>
            <td style="color:white">@x.DiziID</td>
            <td style="color:white">@x.DiziAd</td>
            <td style="color:white">@x.DiziTurler</td>
            <td style="color:white">@x.DiziStudyo</td>
            <td style="color:white">@x.DiziSezonSayi</td>
            <td style="color:white">@x.DiziIMDB</td>
            <td style="color:white">@x.DiziBilgi</td>


            <td><a class="btn btn-danger" asp-area="" asp-controller="Admin" asp-action="DiziSil" asp-route-id="@x.DiziID"> Sil </a></td><!--sil-->
            <td><a class="btn btn-primary" asp-area="" asp-controller="Admin" asp-action="VeriGetir" asp-route-id="@x.DiziID"> Güncelle </a></td><!--guncelle-->
            <!-- <td><a href="#" class="btn btn-info">Detaylar</a></td>  -->


        </tr>
    }
</table>
