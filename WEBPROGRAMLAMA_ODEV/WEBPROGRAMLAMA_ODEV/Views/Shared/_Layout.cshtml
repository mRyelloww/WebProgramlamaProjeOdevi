<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WEBPROGRAMLAMA_ODEV</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- <link rel="stylesheet" href="~/css/site.css" />-->
    <link rel="stylesheet" href="~/css/site2.css" />
    <link rel="stylesheet" href="~/css/fontawesome.css" />
    <link rel="stylesheet" href="~/css/fontawesome.min.css" />

</head>

<body>
    <ul>
        <li>
            <nav class="navbar navbar-expand-md fixed-left">
                <!--SOLA YAPIŞIK NAVBAR-->
                <img src="~/images/Logo3.png" class="img-center" height="146" width="212" /><!--RESİM-->
                <!--NAVBAR TOGGLE BUTONU-->                                                 <!--SİMGEYİ GÖRMÜYOR BUNA BİR BAK!!!!!!!!!!!!-->
                <button class="navbar-toggler collapsed " style="color:white" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon">
                        <i class="fas fa-bars"></i>
                    </span>
                </button>


                <!--NAVBAR İTEMLERİ (HOME PRİVACY FALAN)-->
                <div class="navbar-collapse collapse" id="navbarsExampleDefault" style="">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index"><span>Home</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown text-white" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown">
                                Üyelik
                            </a>
                            <!--ÜYELİK'E BASINCA AÇILAN GİZLİ BAR-->
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" href="#">Giriş yap</a>
                                <a class="dropdown-item" href="#">Üye ol</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>
        </li>
    </ul>



    <!--İÇERİK-->
    <div>
        <main role="main" class="pb-3 main">
            @RenderBody()
        </main>
    </div>








    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

</body>

</html>
